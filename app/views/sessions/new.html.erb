<% content_for :head do %>
  <link rel="stylesheet" href="http://getbootstrap.com/examples/jumbotron-narrow/jumbotron-narrow.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<% end %>

<div class="container">
	<h2 class="form-signin-heading">Sign In</h2>
	<%= form_tag('/sessions', :method => :create)  do %>
		  <%= text_field_tag :email, "", placeholder: "Email", :class => "form-control" %>
		  <br>
		  <%= password_field_tag :password, "", placeholder: "Password", :class => "form-control" %>
		  <br>
		  <%= submit_tag "Login", :class => "btn btn-lg btn-primary btn-block"%>
	<% end %>
</div>